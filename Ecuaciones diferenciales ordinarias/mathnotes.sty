\newcounter{Lemmas}
\setcounter{Lemmas}{1}

\newcommand{\R}{\mathbb{R}}
\newcommand{\app}[3]{#1: #2 \longrightarrow #3}
\newcommand{\st}{:}
\newcommand{\abs}[1]{|#1|}
\newcommand{\dotproduct}[2]{<#1,#2>}
\newcommand{\derivative}[1]{\frac{\partial}{\partial #1}}
\newcommand{\lt}{<}
\newcommand{\gt}{>}

\newcommand{\img}[4]{
	\begin{figure}[ht]
    \centering
    \includegraphics[width=#4\textwidth]{#1}
    \caption{#2}
    \label{fig:#3}
	\end{figure}
	}

\newcommand{\name}[2][]{
	\ifthenelse{\equal{#1}{}}
		{\textbf{#2.}\index{#2}}
		{\textbf{#1 #2.}\index{#1!#2}}	
	}

\newenvironment{definition}
	{\vspace{5mm}\begin{rightbar}\textbf{\textit{\color{DarkBlue}{Definición:}}}}
	{\end{rightbar}\vspace{5mm}}
	
\newenvironment{lemma}
	{\vspace{5mm}\begin{rightbar}\textbf{Lema \thesection.\arabic{Lemmas}:}}
	{\end{rightbar}\vspace{5mm}\stepcounter{Lemmas}}
	
\newenvironment{example}[1][]
	{\vspace{5mm}\textbf{Ejemplo\ifthenelse{\equal{#1}{}}{:}{ #1:}}\begin{leftbar}}
	{\end{leftbar}}
	
\newenvironment{method}[1][]
	{\vspace{5mm}\textbf{Método\ifthenelse{\equal{#1}{}}{:}{ #1: \index{Método!#1}}}\begin{rightbar}}
	{\end{rightbar}}

\newenvironment{proof}
	{\textbf{Demostración: }\begin{leftbar}}
	{\end{leftbar}}
	


